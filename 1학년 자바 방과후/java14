package kgh;

import java.util.Scanner;

public class Kgh {

	public static void main(String[] args) {
		// 숫자를 입력받아서 1부터 그 숫자까지 더하는 반복문
		Scanner sc = new Scanner(System.in);
		System.out.println("숫자 입력");
		
		int num = sc.nextInt();
		int 섬 = 0;
		int i = 1;
		
		while(true) {
			System.out.print("현재숫자: "+i);
          섬 = 섬 + i;
          System.out.println("현재합계: "+섬);
          i++;
          if(i > num) {
        	  break;
          }
			
		}
		System.out.println(섬);

	}

}
