package mian;

public class kgh {

	public static void main(String[] args) {
	 //변수 하나 만들어서
		int 숫자 = 18;
		
		String 결과 = "";		
				
	// 삼항 연산자를 활용(조건식) ? 식 1 : 식2
		결과 = (숫자%2==0) ? "짝수" : "홀수";
		System.out.println(숫자+":"+결과);
	// 조건식 = 홀짝을 판별하는 식(나머지 연산자 %)
		
	// 홀인지 짝인지를 판단해서 출력하기	
		
	 
	 

	}

}
